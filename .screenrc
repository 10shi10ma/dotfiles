# General
startup_message off
autodetach on

# Set a large scrollback buffer
defscrollback 32000

# Always start `screen` with UTF-8 enabled (`screen -U`)
defutf8 on

# max 10
maxwin 10

# status line
hardstatus ignore "%w | %h"
# hardstatus alwayslastline " %`%-w%{=b bw}%n %t%{-}%+w"
caption always "%{= wbd} %-w%{=bu bw}%n %t%{-}%+w%40L %{=b bw}%y/%m/%d %{=b bw}%c"