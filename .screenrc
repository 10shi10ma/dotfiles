# General
startup_message off
autodetach on

# Set a large scrollback buffer
defscrollback 32000

# Always start `screen` with UTF-8 enabled (`screen -U`)
defutf8 on

# max 10
maxwin 10

# status line
hardstatus ignore "%w | %h"
hardstatus alwayslastline "%{= cd} %-w%{= wk} %n %t* %{-}%+w %= LoadAVG [%l] "

## マウススクロール有効
termcapinfo xterm* ti@:te@

escape ^Ts
shell $SHELL
